<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h1 class="text-dark bg-light p-4 mb-0">ログイン</h1>
      <div class="form-body p-4">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", autocomplete: "email", class:"form-control mb-3", placeholder:"メールアドレス" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-3", placeholder:"パスワード" %>
          <% if devise_mapping.rememberable? %>
            <div class="field text-center">
              <%= f.check_box :remember_me %>
              <%= f.label "ログイン情報を記憶する" %>
            </div>
          <% end %>
          <%= f.submit "ログイン", class:"btn btn-lg btn-block btn-info mb-3 mt-4" %>
        <% end %>
        <div class="col mx-auto text-center">
          <%= link_to "新規登録はこちらから", new_user_registration_path %>
        </div>
      </div>
    </div>
  </div>
</div>