<div>
  <h3><%= @user.name %></h3>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @videos.each do |video| %>
<div>
  <%= link_to video_path(video.id) do %>
    <video src="<%= rails_blob_path(video.get_video) %>" type="video/mp4" controls></video>
  <% end %>
  <p>タイトル：<%= video.title %></p>
  <p>説明：<%= video.caption %></p>
  <p>ユーザーネーム：<%= video.user.name %></p>
  <p><%= link_to "#{video.comments.count} コメント", video_path(video.id) %></p>
</div>
<% end %>
